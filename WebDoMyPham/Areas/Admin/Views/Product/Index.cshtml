@model List<WebDoMyPham.DataBase.EF.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>

</head>
<body id="page-top">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].ProductID)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].ProductName)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].CategoryID)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Price)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Measure)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Quantity)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Status)</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].ProductID)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].ProductName)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].CategoryID)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Price)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Measure)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Quantity)</th>
                        <th>@Html.DisplayNameFor(modelItem => modelItem[0].Status)</th>
                        <th>Chức Năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<th><img src= "@item.AnhDaiDien" width="16px" height="16px"></th>*@
                            <th>@Html.DisplayFor(modelItem => item.ProductID)</th>
                            <th>@Html.DisplayFor(modelItem => item.ProductName)</th>
                            <th>@Html.DisplayFor(modelItem => item.ProductCategory.CategoryName)</th>
                            <th>@Html.DisplayFor(modelItem => item.Price)</th>
                            <th>@Html.DisplayFor(modelItem => item.Measure)</th>
                            <th>@Html.DisplayFor(modelItem => item.Quantity)</th>
                            <th>@Html.DisplayFor(modelItem => item.Status)</th>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>

</body>
</html>
@section header
{
    Danh Sách Sản Phẩm
}