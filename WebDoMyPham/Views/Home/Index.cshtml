
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listNewProduct = (List<WebDoMyPham.DataBase.EF.Product>)ViewBag.ListNewProduct;
    var listHotProduct = (List<WebDoMyPham.DataBase.EF.Product>)ViewBag.ListHotProduct;

}
@section slide
{
    <div class="header_slide">

        <div class="header_bottom_left">
            @{ Html.RenderAction("ProductCategory", "Product");}
        </div>
        <div class="header_bottom_right">
            <div class="slider">
                <div id="slider">
                    <div id="mover">
                        <div id="slide-1" class="slide">
                            <div class="slider-img">
                                <a href="preview.html"><img src="~/Assets/Client/images/slide-1.jpg" alt="learn more" /></a>
                            </div>
                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 20% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                </div>
                                <a href="preview.html" class="button">Shop Now</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="slide" id="slide-2">
                            <div class="slider-img">
                                <a href="preview.html"><img src="~/Assets/Client/images/slide-2.jpg" alt="learn more" /></a>
                            </div>
                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 40% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services</h4>
                                </div>
                                <a href="preview.html" class="button">Shop Now</a>
                            </div>

                            <div class="clear"></div>
                        </div>
                        <div class="slide" id="slide-3">
                            <div class="slider-img">
                                <a href="preview.html"><img src="~/Assets/Client/images/slide-3.jpg" alt="learn more" /></a>
                            </div>
                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 10% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                </div>
                                <a href="preview.html" class="button">Shop Now</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản Phẩm Mới</h3>
        </div>
        <div class="see">
            <p><a href="/Admin/Product/Index">Xem Tất Cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listNewProduct)
        {
            var url = "/productdetail/" + item.ProductID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt="@item.ProductName" /></a>
                <h2>@item.ProductName </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@item.Price</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="preview.html">Thêm Vào Giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }


    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản Phẩm Hot</h3>
        </div>
        <div class="see">
            <p><a href="#">Xem Tất Cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listHotProduct)
        {
            var url = "/productdetail/" + item.ProductID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt="@item.ProductName" /></a>
                <h2>@item.ProductName </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@item.Price</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="preview.html">Thêm Vào Giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }

    </div>
</div>
